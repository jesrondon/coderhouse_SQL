use venettelecom;
------- Funcion para Saber cuántos días han pasado desde que un cliente fue activado ------
DELIMITER //

CREATE FUNCTION calcular_antiguedad_cliente(fecha DATE)
RETURNS INT
DETERMINISTIC
BEGIN
    RETURN DATEDIFF(CURDATE(), fecha);
END;
//

DELIMITER ;


---- consulta para la funcion -----

SELECT ID_Cliente, Nombre, Razon_Social,
       calcular_antiguedad_cliente(Fecha_activacion) AS antiguedad_dias
FROM customer
WHERE Estado_servicio = 'A';



------ funcion para saber lo recaudado en el ultimo año por concepto de planes y servicios -----

DELIMITER //

CREATE FUNCTION total_renta_anual()
RETURNS DECIMAL(10,2)
DETERMINISTIC
BEGIN
    DECLARE total DECIMAL(10,2);

    SELECT IFNULL(SUM(renta_mensual), 0) * 12
    INTO total
    FROM customer
    WHERE fecha_activacion BETWEEN DATE_SUB(CURDATE(), INTERVAL 1 YEAR) AND CURDATE()
      AND Estado_servicio = 'A';

    RETURN total;
END;
//

DELIMITER ;


---- consulta para la funcion -------

SELECT total_renta_anual() AS renta_recaudada_en_el_ultimo_año;
